
@{
    ViewBag.Title = "PreRegistration";
}

<h2>PreRegistration</h2>

<br />
<a href="/Course/Index" class="btn btn-warning">Go To Course View</a>
<br />
<br />

@if (TempData["msg"] != null)
{
    @TempData["msg"]
}

<form action="" method="post">
    <table class="table table-bordered text-center">
        <tr class="bg-info">
            <td>Name</td>
        </tr>

        @foreach (var cs in Model)
        {
            <tr>
                <td><input type="checkbox" name="Courses[]" value="@cs.Id" class="form-control" /> @cs.Name | @cs.StCount</td>
            </tr>
        }
    </table>
    <input type="submit" value="Register" class="btn btn-success" />
</form>
