
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form action="" method="post">
    <input type="hidden" value="@Model.Id" name="Id" />
    <input type="text" name="Name" value="@Model.Name" class="form-control" placeholder="Name" />
    <input type="text" name="Dob" value="@Model.Dob" class="form-control" placeholder="Dob" />
    <input type="text" name="Gender" value="@Model.Gender" class="form-control" placeholder="Gender" />
    <input type="text" name="Cgpa" value="@Model.Cgpa" class="form-control" placeholder="Cgpa" />
    <input type="text" name="DepartmentId" value="@Model.DepartmentId" class="form-control" placeholder="Department Id" />
    <input type="submit" value="Edit" />
</form>