
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<form action="" method="post">
    <input type="hidden" value="@Model.Id" name="Id" />
    <input type="text" name="Title" value="@Model.Title" class="form-control" readonly placeholder="Title" />
    <input type="text" name="CategoryId" value="@Model.CategoryId" class="form-control" readonly placeholder="Category Id" />
    <input type="date" name="Date" value="@Model.Date" readonly class="form-control" />
    <input type="submit" class="btn btn-danger" value="Delete" />
</form>