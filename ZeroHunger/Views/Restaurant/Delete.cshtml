
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<table width=100%>
    <tr>
        <td align="right">
            <a href="/Accounts/Logout" class="btn btn-danger">Logout</a>
        </td>
    </tr>
</table>

<form action="" method="post">
    <input type="hidden" value="@Model.Id" name="Id" />
    <input type="text" name="Name" value="@Model.Name" class="form-control" readonly placeholder="Name" />
    <input type="text" name="Amount" value="@Model.Amount" class="form-control" readonly placeholder="Amount" />
    <input type="submit" class="btn btn-danger" value="Delete" />
</form>