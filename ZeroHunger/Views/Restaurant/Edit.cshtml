
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<table width=100%>
    <tr>
        <td align="right">
            <a href="/Accounts/Logout" class="btn btn-danger">Logout</a>
        </td>
    </tr>
</table>

<form action="" method="post">
    <input type="hidden" value="@Model.Id" name="Id" />
    <input type="text" name="Name" value="@Model.Name" class="form-control" placeholder="Name" />
    <input type="text" name="Amount" value="@Model.Amount" class="form-control" placeholder="Amount" />
    <input type="submit" class="btn btn-success" value="Edit" />
</form>